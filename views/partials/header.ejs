  <script>
    // JavaScript solution to fix navigation links
    document.addEventListener('DOMContentLoaded', function() {
      // Check if we're NOT on the homepage
      if (window.location.pathname !== '/' && window.location.pathname !== '/index' && window.location.pathname !== '/index.html') {
        // Fix navigation links by adding homepage path
        const navLinks = document.querySelectorAll('.nav-links a:not(.primary-btn)');
        navLinks.forEach(link => {
          if (link.getAttribute('href').startsWith('#')) {
            link.setAttribute('href', '/' + link.getAttribute('href'));
          }
        });
      }
    });
  </script>
