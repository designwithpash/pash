<%- include("partials/header") %>

<div class="error-container" style="
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    text-align: center;
    padding: 2rem;
">
    <h1 style="margin-bottom: 1rem;"><%= message %></h1>
    <% if (error && Object.keys(error).length > 0) { %>
        <pre style="
            background: rgba(255, 255, 255, 0.1);
            padding: 1rem;
            border-radius: 8px;
            margin: 1rem 0;
            overflow-x: auto;
            max-width: 100%;
        "><%= JSON.stringify(error, null, 2) %></pre>
    <% } %>
    <a href="/" class="primary-btn" style="margin-top: 2rem;">Return Home</a>
</div>

<%- include("partials/footer") %> 